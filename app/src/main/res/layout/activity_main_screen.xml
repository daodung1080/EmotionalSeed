<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.MainScreenActivity"
        android:background="@color/cl_background">

    <com.luseen.spacenavigation.SpaceNavigationView
            android:id="@+id/bnMainScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:inactive_item_color="@color/colorPrimaryDark"
            app:active_item_color="@color/cl_background"
            app:centre_button_icon="@drawable/ic_post"
            app:active_centre_button_background_color="#ff9494"
            app:inactive_centre_button_icon_color="@color/cl_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:space_item_icon_size="20dp"
            app:centre_button_color="@color/colorPrimaryDark"
            app:space_background_color="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>